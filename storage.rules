
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura pública de cualquier archivo
    match /{allPaths=**} {
      allow read;
    }

    // Permitir escritura (subida) de archivos solo a usuarios autenticados
    // Se aplica a cualquier ruta dentro del bucket
    match /{allPaths=**} {
      allow write: if request.auth != null &&
                      request.resource.size < 5 * 1024 * 1024 && // Límite de 5MB
                      request.resource.contentType.matches('image/.*'); // Solo imágenes
    }
  }
}
