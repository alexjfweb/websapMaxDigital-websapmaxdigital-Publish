
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Permite la lectura pública de imágenes en estas carpetas.
    // Cualquiera puede ver los logos, banners, platos, etc.
    match /(profiles|dishes|qrs|landing-subsections|avatars)/{allPaths=**} {
      allow read: if true;
    }
    
    // Permite la escritura (subir, actualizar, eliminar) solo a usuarios autenticados.
    // Esto es una regla general. En producción se podría restringir más, por ejemplo,
    // que un usuario solo pueda escribir en su propia carpeta.
    // request.auth != null significa "si el usuario ha iniciado sesión".
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
