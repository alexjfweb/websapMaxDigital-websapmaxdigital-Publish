rules_version = '2';

// Reglas para Firebase Storage
service firebase.storage {
  // Coincide con el bucket de almacenamiento de tu proyecto
  match /b/{bucket}/o {
    
    // Permite la lectura pública de cualquier archivo.
    // Esto es necesario para que las imágenes se muestren en la landing page
    // sin que los usuarios necesiten iniciar sesión.
    // La escritura está restringida a usuarios autenticados para seguridad.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
