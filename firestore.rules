
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para Superadmin
    // Un superadmin puede leer y escribir en cualquier lugar.
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.role == 'superadmin';
    }

    // Reglas Públicas (Solo Lectura)
    // Cualquier usuario (autenticado o no) puede leer la configuración y los planes de la landing.
    match /landing_configs/{docId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    match /landingPlans/{planId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // Reglas para Empresas
    // Solo un superadmin o un admin de esa empresa puede leer/escribir.
    match /companies/{companyId} {
      allow read, write: if isSuperAdmin() || (request.auth != null && request.auth.token.companyId == companyId);
    }

    // Reglas para Usuarios
    // Un usuario puede leer/modificar su propio documento.
    // Un admin puede leer los usuarios de su propia compañía.
    // Un superadmin puede leer/escribir cualquier usuario.
    match /users/{userId} {
      allow read: if isSuperAdmin() || request.auth.uid == userId || (request.auth != null && resource.data.companyId == request.auth.token.companyId);
      allow write: if isSuperAdmin() || request.auth.uid == userId;
    }

    // Reglas para Platos (Dishes)
    // Cualquiera puede leerlos (para el menú público).
    // Solo un admin de la compañía puede crearlos/modificarlos.
    match /dishes/{dishId} {
      allow read: if true;
      allow write: if isSuperAdmin() || (request.auth != null && request.resource.data.companyId == request.auth.token.companyId);
    }
    
    // Reglas para Pedidos (Orders)
    // Solo un admin de la compañía puede leer/escribir.
    // Cualquiera puede crear un nuevo pedido.
    match /orders/{orderId} {
      allow read, update, delete: if isSuperAdmin() || (request.auth != null && request.resource.data.restaurantId == request.auth.token.companyId);
      allow create: if true;
    }
    
    // Reglas para Mesas (Tables)
    // Solo un admin de la compañía puede gestionarlas.
    match /tables/{tableId} {
        allow read, write: if isSuperAdmin() || (request.auth != null && request.resource.data.restaurantId == request.auth.token.companyId);
    }
    
    // Reglas para Reservas (Reservations)
    // Solo un admin de la compañía puede leerlas.
    // Cualquiera puede crear una nueva reserva.
    match /reservations/{reservationId} {
        allow read, update, delete: if isSuperAdmin() || (request.auth != null && request.resource.data.restaurantId == request.auth.token.companyId);
        allow create: if true;
    }
    
    // Reglas para Auditoría
    // Solo los superadmins pueden acceder a los logs.
    match /globalAuditLogs/{logId} {
      allow read, write: if isSuperAdmin();
    }
    
     // Reglas para configuración de navegación y pagos (Solo Superadmin)
    match /configuration/{docId} {
      allow read, write: if isSuperAdmin();
    }
    
    match /payment_methods/{docId} {
       allow read, write: if isSuperAdmin();
    }
    
    match /supportTickets/{ticketId} {
       allow create: if request.auth != null; // Cualquiera autenticado puede crear un ticket
       allow read, write: if isSuperAdmin(); // Solo el superadmin gestiona los tickets
    }
    
    // Denegar todo lo demás por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
