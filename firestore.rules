rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- REGLAS PÚBLICAS ---
    // Permite que cualquiera lea la configuración de la landing y los planes.
    // Esto es necesario para que la página de inicio se cargue correctamente.
    match /landing_configs/{configId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'superadmin';
    }

    match /landingPlans/{planId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'superadmin';
    }

    // --- REGLAS DE EMPRESAS Y SUS SUB-COLECCIONES ---
    match /companies/{companyId} {
      // Solo usuarios autenticados pueden leer datos de una empresa.
      allow read: if request.auth != null;
      // Solo un superadmin puede crear o editar una empresa.
      allow write: if request.auth != null && request.auth.token.role == 'superadmin';

      // REGLAS PARA SUB-COLECCIONES DE EMPRESAS
      match /dishes/{dishId} {
        allow read: if true; // Menú es público
        allow write: if request.auth != null && (request.auth.token.companyId == companyId || request.auth.token.role == 'superadmin');
      }

      match /tables/{tableId} {
         allow read, write: if request.auth != null && (request.auth.token.companyId == companyId || request.auth.token.role == 'superadmin');
      }
       match /reservations/{reservationId} {
         allow read, write: if request.auth != null && (request.auth.token.companyId == companyId || request.auth.token.role == 'superadmin');
      }
       match /orders/{orderId} {
         allow read, write: if request.auth != null && (request.auth.token.companyId == companyId || request.auth.token.role == 'superadmin');
      }
    }

    // --- REGLAS DE USUARIOS ---
    match /users/{userId} {
      // Un usuario puede leer y escribir su propio documento.
      // Un superadmin puede leer/escribir cualquier documento de usuario.
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'superadmin');
    }
    
    // --- REGLAS PARA TICKETS DE SOPORTE ---
    match /supportTickets/{ticketId} {
        // Cualquiera puede crear un ticket, un admin puede verlos todos.
        allow create: if request.auth != null;
        allow read, update: if request.auth != null && (request.auth.token.role == 'superadmin' || request.resource.data.userId == request.auth.uid);
    }
    
     // --- REGLAS PARA CONFIGURACIÓN GLOBAL ---
    match /configuration/{docId} {
      allow read: if true; // La configuración de navegación es pública
      allow write: if request.auth != null && request.auth.token.role == 'superadmin';
    }
    
    // --- REGLAS PARA LOGS DE AUDITORÍA ---
    match /globalAuditLogs/{logId} {
       allow read, write: if request.auth != null && request.auth.token.role == 'superadmin';
    }
    
    match /table_logs/{logId} {
       allow read, write: if request.auth != null && request.auth.token.role == 'superadmin';
    }
    
     // --- REGLAS PARA PAGOS (SOLO SUPERADMIN) ---
    match /payment_methods/{docId} {
      allow read, write: if request.auth != null && request.auth.token.role == 'superadmin';
    }
    
    match /payment_configs/{docId} {
       allow read, write: if request.auth != null && request.auth.token.role == 'superadmin';
    }


    // Denegar acceso a cualquier otra colección por defecto.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
