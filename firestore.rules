
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- REGLAS PÚBLICAS (SOLO LECTURA) ---
    // Permite que cualquiera pueda leer la configuración y los planes de la landing page.
    match /landing_configs/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Solo usuarios autenticados pueden escribir
    }

    match /landingPlans/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Solo usuarios autenticados pueden escribir
    }

    // --- REGLAS PROTEGIDAS POR AUTENTICACIÓN ---
    // Cualquier usuario autenticado puede leer/escribir en estas colecciones.
    // La lógica de negocio (quién puede escribir en qué) se maneja en el backend/servicios.
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
    }

    match /dishes/{dishId} {
      allow read, write: if request.auth != null;
    }

    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }

    match /reservations/{reservationId} {
      allow read, write: if request.auth != null;
    }
    
    match /tables/{tableId} {
      allow read, write: if request.auth != null;
    }

    match /supportTickets/{ticketId} {
      allow read, write: if request.auth != null;
    }

    match /payment_configs/{paymentId} {
      allow read, write: if request.auth != null;
    }

    match /payment_methods/{methodId} {
      allow read, write: if request.auth != null;
    }

    match /menu_styles/{styleId} {
      allow read, write: if request.auth != null;
    }

    match /globalAuditLogs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    match /configuration/{docId} {
      allow read, write: if request.auth != null;
    }

    // --- REGLAS DE USUARIO ---
    // Un usuario solo puede leer o modificar su propio documento.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // La creación se maneja en el backend durante el registro.
      allow create, delete: if request.auth != null; 
    }

    // --- CATCH-ALL ---
    // Bloquea por defecto cualquier acceso a rutas no definidas explícitamente.
    // Esta regla NO es necesaria si las de arriba cubren todo. Si se añade,
    // debe ser la última y con el formato correcto. Las reglas de Firestore son
    // "deny by default", por lo que si una ruta no coincide con ninguna regla, se deniega.
  }
}
