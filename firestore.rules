rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas Públicas: Cualquiera puede leer la configuración de la landing y los planes.
    match /landing_configs/{docId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    match /landingPlans/{planId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    // Reglas de Usuarios: Los usuarios pueden leer/actualizar su propio documento. Solo los superadmins pueden crear/eliminar.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    // Reglas de Compañías: Los admins pueden leer/actualizar su propia compañía.
    match /companies/{companyId} {
      allow read, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
      allow create, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Reglas para Subcolecciones de Compañías (Platos, Pedidos, etc.)
    // Solo se permite el acceso si el usuario pertenece a la compañía.
    function isUserInCompany(companyId) {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
    }

    match /dishes/{dishId} {
      allow read: if true; // Menú público
      allow write: if isUserInCompany(resource.data.companyId);
    }

    match /orders/{orderId} {
      allow read, write: if isUserInCompany(resource.data.restaurantId);
    }
    
    match /reservations/{reservationId} {
      allow create: if true; // Cualquiera puede crear una reserva
      allow read, update, delete: if isUserInCompany(resource.data.restaurantId);
    }
    
    match /tables/{tableId} {
      allow read, write: if isUserInCompany(resource.data.restaurantId);
    }
    
    // Reglas para Logs y Auditoría (Solo Superadmin)
    match /globalAuditLogs/{logId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    match /supportTickets/{ticketId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin' || request.auth.uid == resource.data.userId);
    }

    // Denegar todo lo demás por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
