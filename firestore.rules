
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regla global: Nadie puede leer o escribir por defecto.
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Regla #1: Permitir lectura pública para la configuración de la landing.
    match /landing_configs/{docId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Regla #2: Permitir lectura pública para los planes de la landing.
    match /landingPlans/{planId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    // Regla #3: Permitir a los usuarios leer su propio documento.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Solo el superadmin puede crear o modificar usuarios directamente.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    // Regla #4: Proteger las compañías. Solo los usuarios autenticados que pertenecen a la compañía pueden leer sus datos.
    match /companies/{companyId} {
        allow read: if request.auth != null && request.auth.uid != null && resource.data.ownerId == request.auth.uid;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Regla #5: Los platos de una compañía son públicos si la compañía está activa.
    match /dishes/{dishId} {
        allow read: if get(/databases/$(database)/documents/companies/$(resource.data.companyId)).data.status == 'active';
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == resource.data.companyId;
    }

    // Regla #6: Los pedidos son privados.
    match /orders/{orderId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == resource.data.restaurantId;
      // Permitir crear pedidos a cualquiera (público)
      allow create: if true;
    }
    
    // Regla #7: Las reservas son privadas.
    match /reservations/{reservationId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == resource.data.restaurantId;
      // Permitir crear reservas a cualquiera (público)
      allow create: if true;
    }
    
    // Regla #8: Los logs de auditoría solo son accesibles por el superadmin.
    match /globalAuditLogs/{logId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
  }
}
