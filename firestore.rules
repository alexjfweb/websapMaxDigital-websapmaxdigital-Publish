rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- REGLAS PÚBLICAS ---
    // Permite que cualquiera lea la configuración de la landing y los planes.
    match /landing_configs/{docId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    match /landingPlans/{planId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Permite a cualquier usuario crear una reserva (usado por el formulario público).
    match /reservations/{reservationId} {
        allow create: if true;
        allow read, update, delete: if request.auth != null;
    }

    // --- REGLAS DE USUARIOS ---
    match /users/{userId} {
      // Un usuario puede leer y escribir en su propio documento.
      allow read, update, delete: if request.auth.uid == userId;
      // Permite la creación de un nuevo usuario durante el registro.
      allow create: if request.auth.uid == userId;
    }

    // --- REGLAS DE EMPRESAS Y SUS SUB-COLECCIONES ---
    match /companies/{companyId} {
      // Superadmin tiene acceso total.
      allow read, write, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
      
      // Los administradores pueden gestionar su propia empresa.
      allow read, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
      
      // --- SUB-COLECCIONES DE EMPRESA ---
      // Cualquiera puede leer los platos de un restaurante (para el menú público).
      match /dishes/{dishId} {
        allow read: if true;
        // Solo los usuarios autenticados de esa empresa pueden escribir.
        allow write, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
      }
      
      // Solo usuarios de la empresa pueden leer/escribir en estas colecciones.
      match /orders/{orderId} {
        allow read, write, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
      }
      
      match /tables/{tableId} {
         allow read, write, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
      }
    }
    
    // --- REGLAS DE SUPERADMIN ---
    // Colecciones que solo el superadmin puede leer y escribir.
    match /globalAuditLogs/{logId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    match /supportTickets/{ticketId} {
        allow create: if request.auth != null; // Los usuarios pueden crear tickets
        allow read, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
  }
}
