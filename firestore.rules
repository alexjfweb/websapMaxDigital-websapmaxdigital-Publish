rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Permitir lectura pública de la configuración y planes de la landing
    match /landing_configs/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'superadmin';
    }
    
    match /landingPlans/{planId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'superadmin';
    }

    // Reglas para compañías: solo superadmin puede ver todas, admin puede ver/editar la suya
    match /companies/{companyId} {
      allow read: if request.auth != null && (request.auth.token.role == 'superadmin' || request.auth.token.companyId == companyId);
      allow create: if request.auth != null;
      allow update: if request.auth != null && (request.auth.token.role == 'superadmin' || request.auth.token.companyId == companyId);
      allow delete: if request.auth != null && request.auth.token.role == 'superadmin';
    }

    // Reglas para usuarios: superadmin puede todo, usuarios pueden ver/editar su propio perfil
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.token.role == 'superadmin' || request.auth.uid == userId);
      allow create: if request.auth != null;
      allow update: if request.auth != null && (request.auth.token.role == 'superadmin' || request.auth.uid == userId);
      allow delete: if request.auth != null && request.auth.token.role == 'superadmin';
    }

    // Reglas para platos, pedidos, mesas, reservas: solo usuarios de la misma compañía o superadmin
    match /dishes/{dishId} {
      allow read: if true; // Permitir lectura pública para el menú
      allow write: if request.auth != null && (request.auth.token.role == 'superadmin' || request.auth.token.companyId == resource.data.companyId);
    }
    
    match /orders/{orderId} {
      allow create: if true; // Cualquier cliente puede crear un pedido
      allow read, update, delete: if request.auth != null && (request.auth.token.role == 'superadmin' || request.auth.token.companyId == resource.data.restaurantId);
    }

    match /tables/{tableId} {
      allow read: if true; // Lectura pública para disponibilidad
      allow write: if request.auth != null && (request.auth.token.role == 'superadmin' || request.auth.token.companyId == resource.data.restaurantId);
    }

    match /reservations/{reservationId} {
      allow create: if true; // Clientes pueden crear reservas
      allow read, update, delete: if request.auth != null && (request.auth.token.role == 'superadmin' || request.auth.token.companyId == resource.data.restaurantId);
    }
    
    // Reglas para logs y tickets
    match /globalAuditLogs/{logId} {
      allow read, write: if request.auth != null && request.auth.token.role == 'superadmin';
    }
    
    match /supportTickets/{ticketId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (request.auth.token.role == 'superadmin' || request.auth.uid == resource.data.userId);
    }
    
    // Denegar todo lo demás por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
