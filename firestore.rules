
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- REGLAS PÚBLICAS (SOLO LECTURA) ---
    // Permite que la landing page cargue la configuración y los planes sin que el usuario inicie sesión.
    
    match /landing_configs/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Solo usuarios autenticados (superadmin) pueden escribir.
    }

    match /landingPlans/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Solo usuarios autenticados (superadmin) pueden escribir.
    }

    // --- REGLAS PROTEGIDAS (REQUIEREN AUTENTICACIÓN) ---
    
    // Los usuarios pueden leer y escribir sus propios datos.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Las empresas, platos, pedidos, etc., solo pueden ser accedidos por usuarios autenticados.
    // Se podrían añadir reglas más específicas (ej. solo usuarios de esa compañía).
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
    }

    match /dishes/{dishId} {
      allow read, write: if request.auth != null;
    }

    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    
    match /reservations/{reservationId} {
      allow read, write: if request.auth != null;
    }

    match /tables/{tableId} {
      allow read, write: if request.auth != null;
    }
    
    match /supportTickets/{ticketId} {
        allow read, write: if request.auth != null;
    }

    // Regla de captura para el resto de las colecciones.
    // Niega el acceso a cualquier otra colección a menos que haya una regla explícita.
    match /{path=**}/documents/{document} {
      allow read, write: if false;
    }
  }
}
