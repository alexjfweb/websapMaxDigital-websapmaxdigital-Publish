
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas Públicas: Cualquiera puede leer, pero nadie puede escribir.
    // Esencial para la landing page.
    match /landing_configs/{docId} {
      allow read: if true;
      allow write: if false; // Nadie escribe directamente aquí.
    }
    
    match /landingPlans/{planId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Reglas para Tickets de Soporte
    // Cualquiera puede crear (POST), pero solo superadmins pueden leer/actualizar
    match /supportTickets/{ticketId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Configuración general (ej. navegación)
    match /configuration/{configId} {
      allow read: if true; // Permitir lectura para que la UI se construya
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    // Reglas para Usuarios: Un usuario puede leer/actualizar su propio perfil. Superadmins pueden hacer todo.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Reglas para Compañías: Solo los miembros (admins) de esa compañía y superadmins pueden acceder.
    match /companies/{companyId} {
      // Un usuario puede leer los datos de su propia compañía.
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
      // Solo el superadmin puede crear/actualizar/borrar compañías directamente.
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Reglas para Subcolecciones: Platos, Pedidos, Mesas, etc. pertenecen a una compañía.
    match /dishes/{dishId} {
       allow read: if true; // Menús públicos
       allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == resource.data.companyId;
    }
    
    match /orders/{orderId} {
      allow create: if true; // Clientes pueden crear pedidos
      allow read, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == resource.data.restaurantId;
    }
    
    match /reservations/{reservationId} {
       allow create: if true; // Clientes pueden crear reservas
       allow read, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == resource.data.restaurantId;
    }
    
    match /tables/{tableId} {
      allow read: if true; // Empleados y admins necesitan ver el estado de las mesas
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == resource.data.restaurantId;
    }
    
    // Colección de logs de auditoría: Solo superadmins pueden leer y solo el sistema (o superadmin) puede escribir.
    match /globalAuditLogs/{logId} {
       allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
  }
}
